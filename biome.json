{
   "root": true,
   "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
   "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
   },
   "files": {
      "includes": ["src/**/*.ts"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 120
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "style": {
            "useImportType": "on"
         },
         "suspicious": {
            "noExplicitAny": "off"
         }
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "single"
      }
   },
   "assist": {
      "enabled": true,
      "actions": {
         "source": {
            "organizeImports": "on"
         }
      }
   }
}
