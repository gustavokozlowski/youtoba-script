{
     "root": true,
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
      "includes": ["src/**/*.ts", "src/**/*.tsx"]
    
  },
	"formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
	"linter": {
		"enabled": true,
		"rules": {
      "recommended": true,
      "style": {
        "useImportType": "on"
      }
    }
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
